<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffa500"
        android:text=" Calculator"
        android:layout_marginBottom="2dp"
        android:textColor="#fff"
        android:textSize="40dp"
        />
    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:layout_weight="1"
        android:text=""
        android:paddingTop="30dp"
        android:textColor="#000"
        android:gravity="bottom"
        android:padding="10dp"
        android:textSize="30sp"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        tools:ignore="RtlCompat">

    </TextView>
    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fff"
        android:gravity="bottom"
        android:text=""
        android:textColor="#000"
        android:padding="10dp"
        android:textSize="40sp"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        tools:ignore="RtlCompat">

    </TextView>

    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bsin"
                        android:text="sin"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:background="#ffa"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bcos"
                        android:text="cos"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:background="#ffa"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                    <Button
                        android:id="@+id/btan"
                        android:text="tan"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:background="#ffa"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/blog"
                        android:text="log"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:background="#ffa"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bln"
                        android:text="ln"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:background="#ffa"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bfact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x!"
                        android:textAllCaps="false"
                        android:background="#ffa"
                        android:textColor="#000"
                        android:textSize="40sp">

                    </Button>
                    <Button
                        android:id="@+id/bsquare"
                        android:text="x²"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        android:textSize="40sp"
                        android:background="#ffa"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bsqrt"
                        android:text="√"
                        android:layout_marginLeft="5dp"
                        android:textSize="40sp"
                        android:background="#ffa"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bb1"
                        android:text="("
                        android:textSize="30sp"
                        android:layout_marginLeft="5dp"
                        android:background="#ffa"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bb2"
                        android:text=")"
                        android:layout_marginLeft="5dp"
                        android:textSize="30sp"
                        android:background="#ffa"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b7"
                        android:text="7"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5023"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b8"
                        android:text="8"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5023"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b9"
                        android:text="9"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5023"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bac"
                        android:text="AC"
                        android:layout_marginLeft="5dp"
                        android:textSize="40sp"
                        android:background="#6420"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                    <Button
                        android:id="@+id/bc"
                        android:text="C"
                        android:layout_marginLeft="5dp"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:background="#6420"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b4"
                        android:text="4"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5023"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b5"
                        android:text="5"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5023"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b6"
                        android:text="6"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5023"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bmul"
                        android:text="×"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5626"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bdiv"
                        android:text="÷"
                        android:layout_marginLeft="5dp"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:background="#5626"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b1"
                        android:text="1"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5023"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b2"
                        android:text="2"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5023"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b3"
                        android:text="3"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5023"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/badd"
                        android:text="+"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:background="#5626"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bsum"
                        android:text="-"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="60sp"
                        android:textColor="#000"
                        android:background="#5626"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <Button
                        android:id="@+id/bpi"
                        android:text="\u03C0"
                        android:textSize="30sp"
                        android:background="#5626"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/b0"
                        android:text="0"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5023"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bdec"
                        android:text="."
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:background="#5626"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bperc"
                        android:text="%"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#000"
                        android:background="#5626"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>
                    <Button
                        android:id="@+id/bequal"
                        android:text="="
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:textColor="#000"
                        android:background="#3451"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>